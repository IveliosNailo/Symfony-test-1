{% extends 'base.html.twig' %}

{% block title %}Toutes les recettes!{% endblock %}

{% block body %}
    <p>
        Ici, découvrez, créez et éditez les recettes que vous voulez !!!
    </p>
    <p>
       <a class="btn btn-primary btn-sm" href="{{ path('recipe.create') }}">Créer une nouvelle recette</a>
    </p>
    <table class="table">
        <thread>
            <tr>
                <th> Titre </th>
                <th> Action </th>
            </tr>
        </thread>
        <tbody>
        {% for recipe in recipes %}
        <tr>
            <td>
                <a href="{{ path('recipe.show', {id: recipe.id, slug : recipe.slug}) }}">{{recipe.title}}</a>
            </td>
            <td>
                <div class"d-flex gap-1">
                    <a class="btn btn-primary btn-sm"href="{{ path('recipe.edit', {id: recipe.id, slug : recipe.slug}) }} ">Editer</a>
                    <form action="{{ path('recipe.delete', {id: recipe.id }) }}" method="post">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class"btn btn-danger btn-sm">Supprimer</button>
                    </form>
                </div>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
